<Window x:Class="MHTMLToHTML.BatchConvertWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="批量转换MHTML文件" Height="650" Width="1000"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">
    
    <Window.Resources>
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#005A9E"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#004578"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#CCCCCC"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="HeaderText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
    </Window.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- 标题 -->
        <TextBlock Grid.Row="0" Text="批量转换MHTML文件" 
                   FontSize="24" FontWeight="Bold" 
                   Foreground="#007ACC" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,20"/>
        
        <!-- 文件选择区域 -->
        <GroupBox Grid.Row="1" Header="文件选择" Margin="0,0,0,15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="150"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                    <Button Name="btnAddFiles" Content="添加文件..." 
                            Style="{StaticResource ModernButton}" 
                            Click="BtnAddFiles_Click" 
                            Margin="0,0,10,0"/>
                    <Button Name="btnAddFolder" Content="添加文件夹..." 
                            Style="{StaticResource ModernButton}" 
                            Click="BtnAddFolder_Click" 
                            Margin="0,0,10,0"/>
                    <Button Name="btnClearFiles" Content="清空列表" 
                            Style="{StaticResource ModernButton}" 
                            Background="#DC3545" 
                            Click="BtnClearFiles_Click"/>
                </StackPanel>
                
                <ListView Grid.Row="1" Name="lstFiles" 
                          AllowDrop="True" 
                          Drop="LstFiles_Drop"
                          DragOver="LstFiles_DragOver"
                          BorderThickness="1"
                          BorderBrush="#CCCCCC">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="文件名" Width="300" DisplayMemberBinding="{Binding FileName}"/>
                            <GridViewColumn Header="文件大小" Width="100" DisplayMemberBinding="{Binding FileSize}"/>
                            <GridViewColumn Header="状态" Width="150" DisplayMemberBinding="{Binding Status}"/>
                            <GridViewColumn Header="完整路径" Width="400" DisplayMemberBinding="{Binding FullPath}"/>
                        </GridView>
                    </ListView.View>
                </ListView>
                
                <TextBlock Grid.Row="2" Name="txtFileCount" 
                          Text="已选择 0 个文件" 
                          FontSize="12" 
                          Foreground="#666666" 
                          Margin="0,5,0,0"/>
            </Grid>
        </GroupBox>
        
        <!-- 输出设置区域 -->
        <GroupBox Grid.Row="2" Header="输出设置" Margin="0,0,0,15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" 
                          Text="输出目录:" Style="{StaticResource HeaderText}"/>
                <TextBox Grid.Row="1" Grid.Column="0" Name="txtOutputDir" 
                         Height="32" Padding="8" BorderThickness="1" BorderBrush="#CCCCCC" 
                         Margin="0,0,10,0"/>
                <Button Grid.Row="1" Grid.Column="1" Name="btnBrowseOutputDir" 
                        Content="浏览..." 
                        Style="{StaticResource ModernButton}" 
                        Click="BtnBrowseOutputDir_Click"/>
                
                <!-- 转换选项 -->
                <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" 
                           Orientation="Horizontal" Margin="0,15,0,0">
                    <StackPanel Orientation="Vertical" Margin="0,0,30,0">
                        <TextBlock Text="输出格式:" FontWeight="Bold" Margin="0,0,0,5"/>
                        <StackPanel Orientation="Horizontal">
                            <RadioButton Name="rbBatchHTML" Content="HTML" IsChecked="True" Margin="0,0,20,0" 
                                        FontSize="12" Checked="BatchOutputFormat_Changed"/>
                            <RadioButton Name="rbBatchMarkdown" Content="Markdown" Margin="0,0,0,0" 
                                        FontSize="12" Checked="BatchOutputFormat_Changed"/>
                        </StackPanel>
                    </StackPanel>
                    
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="转换选项:" FontWeight="Bold" Margin="0,0,0,5"/>
                        <CheckBox Name="chkBatchIncludeImages" 
                                  Content="包含图片（嵌入HTML中）" 
                                  IsChecked="True" 
                                  FontSize="12" 
                                  Margin="0,0,0,5"/>
                        <CheckBox Name="chkBatchEnhancedMarkdown" 
                                  Content="增强Markdown格式处理" 
                                  IsChecked="True" 
                                  FontSize="12"
                                  Visibility="Collapsed"
                                  Margin="0,0,0,5"/>
                        <CheckBox Name="chkBatchDebugMode" 
                                  Content="调试模式" 
                                  IsChecked="False" 
                                  FontSize="12"
                                  Visibility="Collapsed"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </GroupBox>
        
        <!-- 进度和日志区域 -->
        <GroupBox Grid.Row="3" Header="转换进度和日志">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- 总体进度 -->
                <StackPanel Grid.Row="0" Margin="0,0,0,10">
                    <TextBlock Name="txtOverallProgress" Text="准备就绪" FontWeight="Bold" Margin="0,0,0,5"/>
                    <ProgressBar Name="progressOverall" Height="20" Minimum="0" Maximum="100" Value="0"/>
                </StackPanel>
                
                <!-- 当前文件进度 -->
                <StackPanel Grid.Row="1" Margin="0,0,0,10">
                    <TextBlock Name="txtCurrentFile" Text="当前文件：无" FontSize="12" Margin="0,0,0,5"/>
                    <ProgressBar Name="progressCurrent" Height="15" Minimum="0" Maximum="100" Value="0"/>
                </StackPanel>
                
                <!-- 日志 -->
                <ScrollViewer Grid.Row="2">
                    <TextBox Name="txtBatchLog" 
                             TextWrapping="Wrap" 
                             IsReadOnly="True" 
                             Background="#F8F9FA" 
                             BorderThickness="0" 
                             FontFamily="Consolas" 
                             FontSize="11" 
                             VerticalScrollBarVisibility="Auto"/>
                </ScrollViewer>
            </Grid>
        </GroupBox>
        
        <!-- 操作按钮 -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" 
                   HorizontalAlignment="Center" Margin="0,15,0,0">
            <Button Name="btnStartBatch" 
                    Content="开始批量转换" 
                    Style="{StaticResource ModernButton}" 
                    Click="BtnStartBatch_Click" 
                    Margin="0,0,10,0"/>
            <Button Name="btnStopBatch" 
                    Content="停止转换" 
                    Style="{StaticResource ModernButton}" 
                    Background="#DC3545" 
                    Click="BtnStopBatch_Click" 
                    IsEnabled="False"
                    Margin="0,0,10,0"/>
            <Button Name="btnClearLog" 
                    Content="清空日志" 
                    Style="{StaticResource ModernButton}" 
                    Background="#6C757D" 
                    Click="BtnClearLog_Click"
                    Margin="0,0,10,0"/>
            <Button Name="btnClose" 
                    Content="关闭" 
                    Style="{StaticResource ModernButton}" 
                    Background="#6C757D" 
                    Click="BtnClose_Click"/>
        </StackPanel>
        
        <!-- 状态栏 -->
        <StatusBar Grid.Row="5" Margin="0,10,0,0">
            <StatusBarItem>
                <TextBlock Name="txtBatchStatus" Text="就绪"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock Name="txtBatchStats" Text=""/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window> 