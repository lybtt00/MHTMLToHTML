<Window x:Class="MHTMLToHTML.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="关于 MHTML转换工具" Height="500" Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F8F9FA">

    <Window.Resources>
        <Style x:Key="HeaderText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#007ACC"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,10,0,10"/>
        </Style>

        <Style x:Key="VersionText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="#666666"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,5,0,5"/>
        </Style>

        <Style x:Key="FeatureText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="Margin" Value="0,3,0,3"/>
            <Setter Property="LineHeight" Value="20"/>
        </Style>

        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#007ACC"/>
            <Setter Property="Margin" Value="0,15,0,10"/>
        </Style>

        <Style x:Key="CloseButton" TargetType="Button">
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,20,0,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#005A9E"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#004578"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="40">
            <StackPanel>
                <!-- Logo区域 -->
                <Border Background="White" 
                        BorderBrush="#DDDDDD" 
                        BorderThickness="1" 
                        CornerRadius="8" 
                        Padding="20" 
                        Margin="0,0,0,20"
                        HorizontalAlignment="Center">
                    <StackPanel HorizontalAlignment="Center">
                        <!-- SVG Logo展示区域 -->
                        <Border Width="128" Height="128" 
                                Background="White" 
                                CornerRadius="64"
                                Margin="0,0,0,20">
                            <Grid>
                                <!-- 背景圆形 -->
                                <Ellipse Fill="#007ACC" Stroke="#005A9E" StrokeThickness="2" Margin="4"/>

                                <!-- Logo内容 -->
                                <Canvas>
                                    <!-- 左侧MHTML文档 -->
                                    <Rectangle Canvas.Left="20" Canvas.Top="45" Width="24" Height="32" 
                                              Fill="White" Stroke="#CCCCCC" RadiusX="2" RadiusY="2" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                                    <Polygon Canvas.Left="38" Canvas.Top="45" 
                                            Points="0,0 6,6 0,6" Fill="#E0E0E0" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                                    <TextBlock Canvas.Left="22" Canvas.Top="56" 
                                              Text="MHT" FontSize="8" FontWeight="Bold" 
                                              Foreground="#007ACC" HorizontalAlignment="Center" VerticalAlignment="Top"/>

                                    <!-- 转换箭头 -->
                                    <Polygon Canvas.Left="52" Canvas.Top="58" 
                                            Points="0,0 20,0 20,-4 28,4 20,12 20,8 0,8" 
                                            Fill="#FFD700" Stroke="#E6C200"/>

                                    <!-- 右侧HTML文档 -->
                                    <Rectangle Canvas.Left="84" Canvas.Top="30" Width="24" Height="25" 
                                              Fill="White" Stroke="#CCCCCC" RadiusX="2" RadiusY="2"/>
                                    <Polygon Canvas.Left="102" Canvas.Top="30" 
                                            Points="0,0 6,6 0,6" Fill="#E0E0E0"/>
                                    <TextBlock Canvas.Left="87" Canvas.Top="39" 
                                              Text="HTML" FontSize="6" FontWeight="Bold" 
                                              Foreground="#E44D26" HorizontalAlignment="Left"/>

                                    <!-- 右侧MD文档 -->
                                    <Rectangle Canvas.Left="84" Canvas.Top="65" Width="24" Height="25" 
                                              Fill="White" Stroke="#CCCCCC" RadiusX="2" RadiusY="2"/>
                                    <Polygon Canvas.Left="102" Canvas.Top="65" 
                                            Points="0,0 6,6 0,6" Fill="#E0E0E0"/>
                                    <TextBlock Canvas.Left="90" Canvas.Top="73" 
                                              Text="MD" FontSize="7" FontWeight="Bold" 
                                              Foreground="#083FA1" HorizontalAlignment="Left"/>
                                </Canvas>
                            </Grid>
                        </Border>

                        <TextBlock Text="MHTML转换工具" Style="{StaticResource HeaderText}"/>
                    </StackPanel>
                </Border>

                <!-- 应用信息 -->
                <StackPanel>
                    <TextBlock Text="版本 1.0.0" Style="{StaticResource VersionText}"/>
                    <TextBlock Text="开发语言：C# / WPF | 框架版本：.NET 8.0" Style="{StaticResource VersionText}"/>

                    <!-- 功能特点 -->
                    <TextBlock Text="功能特点" Style="{StaticResource SectionHeader}"/>
                    <StackPanel Margin="20,0,0,0">
                        <TextBlock Text="• 支持HTML和Markdown双输出格式" Style="{StaticResource FeatureText}"/>
                        <TextBlock Text="• 批量转换功能，支持多文件处理" Style="{StaticResource FeatureText}"/>
                        <TextBlock Text="• 增强的Markdown格式处理" Style="{StaticResource FeatureText}"/>
                        <TextBlock Text="• 智能表格转换（支持thead/tbody结构）" Style="{StaticResource FeatureText}"/>
                        <TextBlock Text="• 优化表格格式" Style="{StaticResource FeatureText}"/>
                        <TextBlock Text="• 支持拖放操作" Style="{StaticResource FeatureText}"/>
                        <TextBlock Text="• 实时转换进度显示" Style="{StaticResource FeatureText}"/>
                        <TextBlock Text="• 详细日志记录和调试模式" Style="{StaticResource FeatureText}"/>
                        <TextBlock Text="• 图片base64编码支持" Style="{StaticResource FeatureText}"/>
                        <TextBlock Text="• 智能编码检测（GB2312、GBK、Big5等）" Style="{StaticResource FeatureText}"/>
                        <TextBlock Text="• 智能HTML预处理和后处理" Style="{StaticResource FeatureText}"/>
                    </StackPanel>

                    <!-- 技术信息 -->
                    <TextBlock Text="技术信息" Style="{StaticResource SectionHeader}"/>
                    <StackPanel Margin="20,0,0,0">
                        <TextBlock Text="• 基于Windows Presentation Foundation (WPF)" Style="{StaticResource FeatureText}"/>
                        <TextBlock Text="• 使用ReverseMarkdown库进行HTML到Markdown转换" Style="{StaticResource FeatureText}"/>
                        <TextBlock Text="• 支持多种中文编码格式" Style="{StaticResource FeatureText}"/>
                        <TextBlock Text="• 异步处理确保UI响应性" Style="{StaticResource FeatureText}"/>
                    </StackPanel>

                    <!-- 版权信息 -->
                    <TextBlock Text="版权信息" Style="{StaticResource SectionHeader}"/>
                    <TextBlock Text="© 2024 MHTML转换工具. 保留所有权利。" 
                              Style="{StaticResource FeatureText}" 
                              Margin="20,0,0,0"
                              FontStyle="Italic"/>
                </StackPanel>

                <!-- 关闭按钮 -->
                <Button Name="btnClose" Content="关闭" Style="{StaticResource CloseButton}" Click="BtnClose_Click"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window> 